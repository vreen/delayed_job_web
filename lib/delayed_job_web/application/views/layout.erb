<html>
<head>
  <title>Delayed Job Web</title>
  <link rel="stylesheet" type="text/css" href="stylesheets/foundation.min.css" />
  <link rel="stylesheet" type="text/css" href="stylesheets/style.css" />
</head>
<body>

<div id="wrap">

  <nav class="top-bar" data-topbar role="navigation">
    <ul class="title-area">
      <li class="name">
        <h1><a href="#">delayed_job</a></h1>
      </li>
      <!-- Remove the class "menu-icon" to get rid of menu icon. Take out "Menu" to just have icon alone -->
      <li class="toggle-topbar menu-icon"><a href="#"><span>Menu</span></a></li>
    </ul>

    <section class="top-bar-section">
      <ul class="right">
        <li class="has-form">
          <div class="row collapse">
            <form method="get" class="header-queues" action="" style="display:inline; width: 100%;">
              <div class="large-8 small-9 columns">
                <input name="queues" type="text"  placeholder="Filter by queue name" />
              </div>
              <div class="large-4 small-3 columns">
                <input type="submit" value="Filter" class="button expand" />
              </div>
            </form>
          </div>
        </li>
      </ul>
      <!-- Left Nav Section -->
      <ul class="left">
        <% tabs.each do |tab| %>
            <li class="<%= request.path_info == tab[:path] ? 'active' : '' %>">
              <a class="tab" href="<%= u(tab[:path]) %>">
                <%=h tab[:name] %>
              </a>
            </li>
        <% end %>
      </ul>

    </section>
  </nav>
  <div class="row">
    <div class="large-12">
      <div id="main">
        <%= yield %>
      </div>
    </div>
  </div>
</div>

<div id="footer">
  <p>
    Powered by
    <a href="https://github.com/collectiveidea/delayed_job">delayed_job</a>
    &amp;
    <a href="https://github.com/ejschmitt/delayed_job_web">delayed_job_web</a>
  </p>
</div>


    <script src="<%= u("javascripts/jquery-1.7.1.min.js") %>" type="text/javascript"></script>
    <script src="<%= u("javascripts/foundation.min.js") %>" type="text/javascript"></script>
    <script src="<%= u("javascripts/jquery.relatize_date.js") %>" type="text/javascript"></script>
    <script src="<%= u("javascripts/application.js") %>" type="text/javascript"></script>
  </body>
</html>
